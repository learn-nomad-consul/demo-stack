datacenter = "dc1"
data_dir = "/tmp"
encrypt = "{{ hostvars['ctrlplane']['consul_key'] }}"
advertise_addr = "{{ hostvars[inventory_hostname].ansible_host }}"
retry_join = ["{{ hostvars['ctrlplane'].ansible_host }}"]
addresses {
    http  = "127.0.0.1 172.17.0.1"
    grpc  = "127.0.0.1 172.17.0.1"
}
ports {
    grpc = 8502
}

enable_central_service_config = true

{% if inventory_hostname == "monitoring" %}
  ui = true
{% endif %}
